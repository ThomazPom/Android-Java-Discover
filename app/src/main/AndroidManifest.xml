<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.unice.mbds.androiddevdiscoverlb">

    <application
        android:allowBackup="true"
        android:icon="@drawable/mbds"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".enregitrerActivity"
            android:parentActivityName="fr.unice.mbds.androiddevdiscoverlb.MainActivity">
        </activity>
        <activity
            android:name=".connexionActivity"
            android:parentActivityName="fr.unice.mbds.androiddevdiscoverlb.MainActivity">
        </activity>
        <activity
            android:name=".rightAccessActivity"
            android:parentActivityName="fr.unice.mbds.androiddevdiscoverlb.connexionActivity">
        </activity>
    </application>

</manifest>